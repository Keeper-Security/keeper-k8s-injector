# Development/Testing Dockerfile
# Used for building and running tests without local Go installation

FROM golang:1.23-alpine

# Install build dependencies
RUN apk add --no-cache \
    git \
    make \
    curl \
    docker-cli \
    bash

# Install golangci-lint
RUN curl -sSfL https://raw.githubusercontent.com/golangci/golangci-lint/master/install.sh | sh -s -- -b /usr/local/bin v1.62.0

WORKDIR /app

# Source code is mounted as volume, not copied
# This allows live editing without rebuilding the image

# Default command
CMD ["go", "version"]
